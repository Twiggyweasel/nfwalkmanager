<div class='nav navbar navbar-default'>
  <div class='container'>
    <%= link_to "NF Walk Manager", root_path, class:'navbar-brand' %>
    <button type="button" class="btn btn-default navbar-btn navbar-right" disabled>Sign in</button>
     <%= form_tag(walkers_path, :method => "get", class: "navbar-form navbar-right", id: "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Find a Walker" %>
      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
           of using a Rails form helper -->
      <button class="btn btn-default" type="submit"><span class='glyphicon glyphicon-search'></span></button>
    </div>
    <% end %>
  </div>  
</div>


