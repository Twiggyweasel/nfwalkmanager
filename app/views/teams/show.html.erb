<%= link_to "Back to Walk", walk_path(@team.walk), class:'btn btn-primary'%>

<div class='page-header'>
  <h2>
    Team - <%= @team.name %> <small><%= @team.walk.name %></small>
  </h2>
</div>

<div class='row'>
  <div class='col-md-12'>
    <table class='table table-striped'>
      <thead>
        <tr>
          <th>Name</th>
          <th>owed</th>
          <th>Paid</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @team.walkers.each do |walker| %>
        <tr>
          <td><%= walker.first_name %> <%= walker.last_name %></td>
          <td><%= walker.amount_owed %></td>
          <td><%= walker.amount_paid %></td>
          <td>
            <%= link_to(walker_path(walker), class:'btn btn-primary') do %>
            <span class='glyphicon glyphicon-pencil'></span>
            <% end %>
            <%= link_to(walker, method: :delete, data: { confirm: 'Are you sure you want to delete this walker? (this can not be undone)' } , class:'btn btn-danger')  do %>
            <span class='glyphicon glyphicon-remove-circle'></span>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>